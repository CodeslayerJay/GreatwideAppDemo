@model ReviewFormModel
@{
    ViewData["Title"] = "Leave A Review";

}

<div>
    <h4 class="text-center">@Model.Product.Name</h4>

    <div class="row">
        <div class="col-md-7 m-auto">
            <form method="post" asp-action="SaveComment" asp-controller="Products" asp-route-id="@Model.Product.ProductId">
                <input asp-for="ProductId" type="hidden" value="@Model.Product.ProductId"/>
                <input asp-for="ProductReviewId" type="hidden"/>

                <div class="p-3" style="border: 1px solid #ccc; border-radius: 5px;">
                    <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
                        <div class="form-row">
                            <div class="col-md-8">
                                <h5 class="text-muted pt-1 pb-3">Add Review</h5>
                            </div>
                            <div class="col-md-4 float-right">
                                <p class="text-muted">* - required fields</p>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-8">
                                <label asp-for="ReviewerName" class="col-form-label">Full Name*</label>
                                <input asp-for="ReviewerName" class="form-control" />
                                <span asp-validation-for="ReviewerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-8">
                                <label asp-for="EmailAddress" class="col-form-label">Email Address*</label>
                                <input asp-for="EmailAddress" class="form-control" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="col-form-label">Rating*</label>
                                @Html.DropDownList("Rating", Model.RatingsDropdownList, "Select Rating", new { @class = "custom-select" })
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">

                            <div class="form-group col-md-12">
                                <label asp-for="Comments" class="col-form-label">Comments</label>
                                <textarea asp-for="Comments" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Comments" class="text-danger"></span>
                            </div>

                        </div>


                        <hr />
                        <div class="form-row">
                            <div class="form-group col-12">
                                <button type="submit" class="btn btn-primary">Save Review</button>
                                <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </div>

                </div>


            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}