@model ProductFormModel
@{
    ViewData["Title"] = (Model.ProductId == 0) ? "Create Product" : "Edit Product";
    
}

<div>
    <h4 class="text-center">@ViewData["Title"]</h4>

    <div class="row">
        <div class="col-md-7 m-auto">
            <form method="post" asp-action="Save" asp-controller="Products">
                <input asp-for="ProductId" type="hidden" />


                <div class="p-3" style="border: 1px solid #ccc; border-radius: 5px;">
                    <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
                        <div class="form-row">
                            <div class="col-md-8">
                                <h5 class="text-muted pt-1 pb-3">Product Information</h5>
                            </div>
                            <div class="col-md-4 float-right">
                                <p class="text-muted">* - required fields</p>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group col-md-8">
                                <label asp-for="Name" class="col-form-label">Name*</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="col-form-label">Model*</label>
                                @Html.DropDownList("ProductModelId", Model.ProductModelSelectItems, "Select Model", new { @class = "custom-select" })
                                <span asp-validation-for="ProductModelId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="ProductNumber" class="col-form-label">Product Number*</label>
                                <input asp-for="ProductNumber" class="form-control" />
                                <span asp-validation-for="ProductNumber" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group col-md-4">
                                <label asp-for="Color" class="col-form-label">Color</label>
                                <input asp-for="Color" class="form-control" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="ListPrice" class="col-form-label">Price*</label>
                                <input asp-for="ListPrice" class="form-control" />
                                <span asp-validation-for="ListPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="SellStartDate" class="col-form-label">Sell Start Date</label>
                                <input asp-for="SellStartDate" class="form-control" type="date" />
                                <span asp-validation-for="SellStartDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <hr/>
                        <div class="form-row">
                            <div class="form-group col-12">
                                <button type="submit" class="btn btn-primary">Save Product</button>
                                @if (Model.ProductId == 0)
                                {
                                    <a asp-controller="Products" asp-action="Index" class="btn">Cancel</a>
                                }
                                else
                                {
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="Model.ProductId" class="btn">Cancel</a>
                                }
                            </div>
                        </div>
                    </div>

                </div>


            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}